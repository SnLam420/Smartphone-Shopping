<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFEEEE"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txtbangtinhtiendien"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:gravity="center"
        android:text="Bảng Tính Tiền Điện"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/txthoten"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="Họ tên khách hàng:" />

        <Spinner
            android:id="@+id/txtspinner"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtbangtinhtiendien"
            android:layout_toRightOf="@id/txthoten"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtchisocu"
            android:layout_width="wrap_content"
            android:text="Chỉ số cũ:" />

        <EditText
            android:id="@+id/editTxtchisocu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtchisomoi"
            android:text="Chỉ số mới:"/>

        <EditText
            android:id="@+id/EditTxtchisomoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtsokw"
            android:text="Số kw tiêu thụ:"/>

        <EditText
            android:id="@+id/EditTxtkwtieuthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtsokwdinhmuc"
            android:text="Số kw tiêu thụ:"/>

        <EditText
            android:id="@+id/EditTxtkwdinhmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtsokwvuotdinhmuc"
            android:text="Số kw tiêu thụ:"/>

        <EditText
            android:id="@+id/EditTxtkwvuotdinhmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtsotienphaitra"
            android:text="Tổng tiền phải trả:"/>

        <EditText
            android:id="@+id/EditTxttongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>
    <TextView
        android:gravity="center"
        android:text="Định mức là 50 kw" />
    <TextView
        android:gravity="center"
        android:text="Trong định mức là 500đ/1kw"/>
    <TextView
        android:gravity="center"
        android:text="Vượt định mức là 1000đ/1kw"/>
    <TableRow>

        <Button
            android:id="@+id/btntinh"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="Tính" />

        <Button
            android:id="@+id/btnin"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="In" />
    </TableRow>

    <TableRow android:layout_width="345dp">

        <Button
            android:id="@+id/btnthoat"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Thoát" />
    </TableRow>
</TableLayout>